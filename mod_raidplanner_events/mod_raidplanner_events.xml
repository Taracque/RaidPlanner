<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" method="upgrade" client="site">
	<name>RaidPlanner Events</name>
	<author>Taracque</author>
	<creationDate>2011-10-04</creationDate>
	<copyright>All rights reserved by Taracque, 2011</copyright>
	<license>GPL 3.0</license>
	<authorEmail>taracque@taracque.hu</authorEmail>
	<authorUrl>taracque.hu</authorUrl>
	<version>1.0.beta</version>
	<description>Shows the upcoming raids for RaidPlanner component</description>
	<files>
		<filename module="mod_raidplanner_events">mod_raidplanner_events.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="raidshowAttendants" type="radio" default="0" class="btn-group btn-group-yesno" label="Show full tooltip" description="Show full RaidPlanner tooltip with attendants">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="raidshowReg" type="radio" default="1" label="Show Regristration" description="Show regristration status">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="raidshowRole" type="radio" default="1" label="Show Role" description="Show raid role (confirmed by Raidleader)">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="raidshowChar" type="radio" default="1" label="Show Character" description="Show signed up character">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="raidshowNumber" type="text" default="5" label="Number" description="How many events should be displayed" />
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="showInvitationAlert" type="list" default="1" label="Show invitation alert" description="Show invitation alert">
					<option value="0">JDISABLED</option>
					<option value="1">JSHOW</option>
					<option value="2">JBROWSERTARGET_MODAL</option>
				</field>
				<field name="alertTimer" type="text" default="24" label="Invitation alert timer" description="How many hours before raid froozen start displaying invitation alerts." />
			</fieldset>
		</fields>
	</config>
</extension>