<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="update">
	<name>RaidPlanner</name>
	<creationDate>2011-03-05</creationDate>
	<author>Taracque</author>
	<authorEmail>taracque@taracque.hu</authorEmail>
	<authorUrl>http://taracque.hu</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>GPU GPL v3 http://www.gnu.org/licenses/gpl.html</license>
	<version>0.1</version>
	<releaseDate>2011-03-22</releaseDate>
	<releaseType>Major release</releaseType>
	<downloadUrl>http://taracque.hu/downloads/com_raidplanner_0.1.zip</downloadUrl>
	<!-- The description is optional and defaults to the name -->
	<description>RaidPlanner component for Joomla 1.5, to organize WoW raids</description>
	<!-- Install Database Section -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install.sql</file>
		</sql>
	</install>
    <uninstall>
		<sql>
			<file driver="mysql" charset="utf8">uninstall.sql</file>
		</sql>
	</uninstall>
	<installfile>install.php</installfile>
	<uninstallfile>install.php</uninstallfile>
	<files folder="com_raidplanner">
		<filename>controller.php</filename>
		<filename>raidplanner.php</filename>
		<filename>router.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<!-- Site Main Language File Copy Section -->
	<languages folder="language">
		<language tag="en-GB">en-GB.com_raidplanner.ini</language>
		<language tag="hu-HU">hu-HU.com_raidplanner.ini</language>
	</languages>
	<!-- Site Main Media File Copy Section -->
	<media destination="raidplanner" folder="images">
		<folder>raid_icons</folder>
		<folder>role_icons</folder>
	</media>
	<administration>
		<!-- Administration Menu Section -->
		<!-- Name to display at the component menu. Should be the same as the extension commercial name -->
		<menu img="components/com_raidplanner/assets/images/raidplanner-favicon.png">Raid Planner</menu>
		<submenu>
			<menu view="raids">Raids</menu>
			<menu view="characters">Characters</menu>
			<menu view="groups">Groups</menu>
			<menu view="roles">Roles</menu>
			<menu view="classes">Classes</menu>
		</submenu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
				to copy FROM in the package to install therefore files copied
				in this section are copied from /admin/ in the package -->
		<files folder="administrator/com_raidplanner">
			<filename>index.html</filename>
			<filename>raidplanner.php</filename>
			<filename>controller.php</filename>
			<folder>assets</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>controllers</folder>
			<folder>tables</folder>
			<filename>install.php</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
		</files>
		<!-- Administration Language File Copy Section -->
		<languages folder="administrator/language">
			<language tag="hu-HU">en-GB.com_raidplanner.ini</language>
			<language tag="en-GB">hu-HU.com_raidplanner.ini</language>
		</languages>
	</administration>
</install>