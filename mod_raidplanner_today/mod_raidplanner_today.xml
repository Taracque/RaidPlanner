<install type="module" version="1.5.0" method="upgrade" client="site">
  <name>RaidPlanner Today</name>
  <author>Taracque</author>
  <creationDate>2011-03-10</creationDate>
  <copyright>All rights reserved by Taracque, 2011</copyright>
  <license>GPL 3.0</license>
  <authorEmail>taracque@taracque.hu</authorEmail>
  <authorUrl>taracque.hu</authorUrl>
  <version>1.0.beta</version>
  <description>Shows the raids today for RaidPlanner component</description>
  <files>
    <filename module="mod_raidplanner_today">mod_raidplanner_today.php</filename>
    <filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/index.html</filename>
  </files>
  <params>
    <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
    <param name="@spacer" type="spacer" default="" label="" description="" />
    <param name="raidshowReg" type="radio" default="1" label="Show Regristration" description="Show regristrated status">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>
    <param name="raidshowRole" type="radio" default="1" label="Show Role" description="Show raid role (confirmed by Raidleader)">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>
    <param name="raidshowChar" type="radio" default="1" label="Show Character" description="Show signed up character">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>
    <param name="raidshowDate" type="radio" default="1" label="Show Today Date" description="Show today's date">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>
  </params>
</install>